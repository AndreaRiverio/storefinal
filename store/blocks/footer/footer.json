{
  "footer": {
    "blocks": ["footer-layout.desktop", "footer-layout.mobile"]
  },
  "footer-layout.desktop": {
    "children": [
      "flex-layout.row#method-payments",
      "flex-layout.row#payment-method-brands",
      "flex-layout.row#information"
    ]
  },

  "flex-layout.row#method-payments": {
    "children": ["rich-text#method-payment"]
  },
  "rich-text#method-payment": {
    "props": {
      "text": "Formas de pagamento",
      "textPosition": "LEFT",
      "font": "t-heading-6"
    }
  },

  "flex-layout.row#payment-method-brands": {
    "children": ["accepted-payment-methods"],
    "props": {
      "blockClass": "payment-methods",
      "marginBottom": 6
    }
  },
  "accepted-payment-methods": {
    "props": {
      "paymentMethods": ["MasterCard", "Visa", "Diners Club"]
    }
  },

  "flex-layout.row#information": {
    "children": ["rich-text#footer"],
    "props": {
      "blockClass": "credits",
      "border": "top",
      "borderColor": "muted-4"
    }
  },
  "rich-text#footer": {
    "props": {
      "text": "Copyright © 2020 Code LTDA.\n CNPJ nº 15.000.000/1500-00 / Av. Ganhadores, nº 15000, São Paulo/SP - CEP 15000-000\nEmpresa do grupo Codesquad",
      "blockClass": "footer"
    }
  },

  "footer-layout.mobile": {
    "children": [
      "flex-layout.row#2-footer-mobile"
    ]
  },
  "flex-layout.row#2-footer-mobile": {
    "children": ["flex-layout.col#footer-1-mobile"],
    "props": {
      "blockClass": "payment-methods",
      "paddingTop": 4,
      "paddingBottom": 4
    }
  },
  "flex-layout.col#footer-1-mobile": {
    "children": [
      "rich-text#method-payment-mobile",
      "accepted-payment-methods",
      "rich-text#footer-mobile"
    ],
    "props": {
      "blockClass": "payment-methods",
      "paddingTop": 4,
      "paddingBottom": 4,
      "rowGap": 4
    }
  },
  "rich-text#method-payment-mobile": {
    "props": {
      "text": "Formas de pagamento",
      "textPosition": "LEFT",
      "font": "body"
    }
  },
  "rich-text#footer-mobile": {
    "props": {
      "text": "Copyright © 2020 Code LTDA.\n CNPJ nº 15.000.000/1500-00 / Av. Ganhadores, nº 15000, São Paulo/SP - CEP 15000-000\nEmpresa do grupo Codesquad",
      "font": "small",
      "blockClass": "footer"
    }
  }
}
